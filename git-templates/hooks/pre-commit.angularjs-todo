#!/bin/bash

#echo $(pwd);
# Script runs from the root of the repo workspace.

find ./src ./css -type f -print0 \
	| xargs -0 grep --line-number --only-matching '\(TODO[: ]\|FIXME\).*' \
	| awk 'BEGIN{print "# TODOs in this Project\n";IFS=":"}{gsub(/_/,"\\\\&", $1);print "*", $0;}' > TODO.md;

git a TODO.md;

