[alias]
	a = add
	alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort
	ap = add --patch
	br = branch
	c = commit
	ca = commit --amend
	ch = !echo "do not use checkout, use switch/restore"
	cm = commit --message
	count = "!f () { compareBranch=${1-master}; git rev-list --count HEAD "^$compareBranch"; }; f "$@""
	d = diff
	del = restore --staged # Unstage a file (opposite of add)
	ds = diff --staged
	l = log --graph --all --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
	ll = log --stat --abbrev-commit
	master = switch master
	s = status
	stow = stash push --message
	sw = switch
	undo = restore -- # Throw away modification to a file
[core]
	excludesfile = ~/.gitignore
	pager = diff-so-fancy | less --tabs=4 -RFX
	quotepath = false
[fetch]
	prune = true
[branch "master"]
	mergeoptions = --ff-only
	rebase = true
[diff]
	compactionHeuristic = true
	algorithm = histogram
[pull]
	rebase = true
[commit]
	gpgsign = true
[protocol]
	version = 2
[init]
	defaultBranch = main
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red
	oldHighlight = red 224
	newNormal = green
	newHighlight = green 194
[diff-so-fancy]
	first-run = false
	stripLeadingSymbols = false
	changeHunkIndicators = false
	markEmptyLines = false
